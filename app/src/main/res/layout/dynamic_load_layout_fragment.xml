<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_8"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="@dimen/space_8">

            <EditText
                android:id="@+id/et_edit_coupon_code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="left|center_vertical"
                android:hint="@string/invincible_coupon_code_hint"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="#666666"
                android:textColorHint="#bbbbbb"
                android:textCursorDrawable="@drawable/coupon_edittext_cursor"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_use_coupon_code"
                android:layout_width="83dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/use_coupon_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/invincible_coupon_code_use_btn"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_marginLeft="@dimen/space_14"
            android:text="@string/invincible_coupon_list_title" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit_invincible_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/invincible_coupon_btn_bg"
        android:gravity="center"
        android:padding="@dimen/space_10"
        android:text="@string/invincible_coupon_item_use_btn"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_18" />

    <ScrollView
        android:id="@+id/sv_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_submit_invincible_coupon"
        android:layout_below="@id/ll_above">

        <LinearLayout
            android:id="@+id/ll_available_coupon_item_fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>


</RelativeLayout>