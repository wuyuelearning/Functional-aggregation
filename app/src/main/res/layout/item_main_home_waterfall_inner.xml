<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/waterfall_corner_bg"
    android:orientation="vertical">
    <utils.imageview.CircleRatioImageView
        android:id="@+id/criv_water_fall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bitmap2"
        app:radiusLeftTop="10"
        app:radiusRightTop="10" />
    <TextView
        android:id="@+id/tv_water_fall_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="123" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="游在河南" />
        <TextView
            android:id="@+id/iv_water_fall_start_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="123" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_water_fall_start_num"
            android:src="@drawable/coupon_check" />
    </RelativeLayout>
</LinearLayout>