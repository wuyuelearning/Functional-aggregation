<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_describe">d
        <!-- Customize your theme here. -->
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FD3C71</item>

    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/popupwindow_popup</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_closed</item>
    </style>

    <style name="AnimationPreview2">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
    </style>

    <style name="style_16_tab_selector">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/color_666666_to_d30775_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DT_DIALOG_THEME" parent="android:Theme.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">@drawable/comm_dt_dialog_bg</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="DT_DIALOG_ANIMATIONS" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dt_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dt_dialog_exit_anim</item>
    </style>

    <style name="COMMON_SIMPLE_DIALOG_THEME" parent="DT_DIALOG_THEME">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="news_text_switcher_anim">
        <item name="android:windowEnterAnimation">@anim/news_text_switcher_in</item>
        <item name="android:windowExitAnimation">@anim/news_text_switcher_out</item>
    </style>

    <style name="KC_DIALOG_Translucent" parent="android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">#00000000</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
    </style>
</resources>
